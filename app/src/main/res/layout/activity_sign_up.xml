<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="146dp"
        android:layout_height="52dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="140dp"
        android:layout_marginRight="10dp"
        android:gravity="bottom|center"
        android:text="Almost there!"
        android:textAlignment="center"
        android:textColor="#007aff"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="132dp" />

    <EditText
        android:id="@+id/UserNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="98dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="textPersonName"
        android:text="User Name"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/PayeeNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UserNameEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="95dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:inputType="textPersonName"
        android:text="Enter Payee User Name"
        android:textAlignment="center" />

    <Button
        android:id="@+id/AddVoiceButton"
        android:layout_width="344dp"
        android:layout_height="84dp"
        android:layout_below="@+id/UserNameEditText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/shape"
        android:fadingEdge="horizontal|vertical"
        android:text="Add Voice"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/AddFaceButton"
        android:layout_width="345dp"
        android:layout_height="83dp"
        android:layout_below="@+id/AddVoiceButton"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape"
        android:text="Add Face"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button3"
        android:layout_width="145dp"
        android:layout_height="52dp"
        android:layout_below="@+id/AddFaceButton"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="130dp"
        android:background="@drawable/round"
        android:text="Sign Up" />


    <ImageView
        android:id="@+id/face"
        android:layout_width="54dp"
        android:layout_height="61dp"
        android:layout_below="@+id/AddFaceButton"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-69dp"
        android:translationZ="5dp"
        app:srcCompat="@drawable/face" />

    <ImageView
        android:id="@+id/voice"
        android:layout_width="56dp"
        android:layout_height="58dp"
        android:layout_below="@+id/AddVoiceButton"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="-71dp"
        android:layout_marginBottom="-10dp"
        android:translationZ="5dp"
        app:srcCompat="@drawable/voice" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="160dp" />

</RelativeLayout>